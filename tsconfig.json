{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "types": [
            "jest"
        ],
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src",
        "**/*.test.ts",
        "**/*.spec.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}